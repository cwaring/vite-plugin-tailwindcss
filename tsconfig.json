{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}